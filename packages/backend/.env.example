# pissykaka addr
PISSYKAKA_HOSTNAME=scheoble.xyz
PISSYKAKA_API=https://scheoble.xyz/api

# sync tuning
DELAY_AFTER_UPDATE_TICK=5000
# seconds between periodic full syncs (use --no-full-sync to disable full sync)
FULL_SYNC_INTERVAL_SECONDS=3600
FETCH_ENTITIES_FROM_API_BASE_LIMIT=1000
FETCH_ENTITIES_MAX_PARALLEL_JOBS=10

# db fetcher defaults
DATABASE_URL="file:./dev.db"
DEFAULT_LIMIT=20
DEFAULT_THREAD_SIZE=5

# api tuning
API_DEFAULT_LISTEN_PORT=3000
API_DEFAULT_LISTEN_HOST=0.0.0.0
MODERATION_SECRET_PASS=secret

METRICS_PASSWORD="Basic base64_secret="

# Kafka consumer (raspredach, https://github.com/U-Me-Chan/raspredach-schemas). Leave empty to disable.
KAFKA_BOOTSTRAP_SERVERS=
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=
KAFKA_CONSUMER_GROUP_ID=umechan-opti-consumer
# KAFKA_TOPICS=chan.boards,chan.posts,chan.files,chan.passports
# KAFKA_READ_FROM_BEGINNING=true  # read from start of topic (for replay/debug); default false = only new messages
